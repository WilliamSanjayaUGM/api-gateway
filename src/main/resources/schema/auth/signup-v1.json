{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Auth Signup Request",
  "type": "object",
  "additionalProperties": false,
  "required": ["email", "username", "password"],
  "properties": {
	"email": {
		"$ref": "classpath:/schema/_common/email.json"
	},
    "username": {
      "type": "string",
      "minLength": 4,
      "maxLength": 35,
      "pattern": "^[a-zA-Z0-9._-]+$"
    },
    "password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 20
    }
  }
}